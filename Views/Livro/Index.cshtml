@model List<LivroModel>
@{
    ViewData["Title"] = "Lista de Livros";
}



@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if(TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @TempData["MensagemErro"]
    </div>
}



<div class="text-center">
    <h1 class="display-4 mb-4">Lista de Livros</h1>
</div>

<a role="button" class="btn btn-primary mb-4" asp-controller="Livro" asp-action="Criar">Adicionar Livro</a>


<div class="text-center">
    <table class="table table-striped display" id="" >
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Livro</th>
                <th scope="col">Autor</th>
                <th scope="col">Descrição</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(var livro in Model)
                {
                    <tr class="align-middle">
                        <th scope="row">@livro.Id</th>
                        <td>@livro.NomeLivro</td>
                        <td>@livro.NomeAutor</td>
                        <td colspan="2">@livro.Descricao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@livro.Id" asp-controller="Livro" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@livro.Id" asp-controller="Livro" asp-action="Apagar">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                   <tr class="add"><td valign="top" colspan="5">Nenhum livro cadastrado</td></tr>
            }
        </tbody>
    </table>

</div>